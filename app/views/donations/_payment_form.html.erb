<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 ">
  <%= form_tag donations_path, id: 'payment-form', method: :post do %>

  <div class="alert alert-danger" role="alert" id="error-msg"><span class="payment-errors"></span></div>

  <%= hidden_field_tag :user_id, params[:user_id] %>
  <%= hidden_field_tag :submission_id, params[:submission_id] %>
  <%= hidden_field_tag :charity_id, params[:charity_id] %>

  <div class="form-group">
    <label class="sr-only" for="amount">Amount (in dollars)</label>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-usd"></i></div>
      <% if params[:amount] %>
        <input type="text" class="form-control custom-input" id="amount" value="<%= params[:amount].to_i/100%>.00" name="amount">
      <% else %>
        <input type="text" class="form-control custom-input" id="amount" name="amount" placeholder="Amount (AUD)">
      <% end %>
    </div>
  </div>
  <% unless params[:user_id] %>
    <div class="form-group">
      <label class="sr-only" for="email">Email</label>
      <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
        <input type="text" class="form-control custom-input" id="email" placeholder="Email" name="email">
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <label class="sr-only" for="card-number">Credit card number</label>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-credit-card-alt"></i></div>
      <input type="text" class="form-control custom-input" id="card-number" placeholder="Card Number" data-stripe="number">
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <label class="sr-only" for="month">Month</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          <input type="text" class="form-control custom-input" id="month" placeholder="MM" data-stripe="exp-month">
          <span class="input-group-addon white-text">/</span>
          <input type="text" class="form-control custom-input" id="year" placeholder="YYYY" data-stripe="exp-year">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="sr-only" for="cvc-number">CVC Number</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-lock"></i></div>
          <input type="text" class="form-control custom-input" id="cvc-number" placeholder="CVC" data-stripe="cvc">
        </div>
      </div>
    </div>
  </div>
  <div class="pay-button">
    <button type="submit" class="btn btn-black btn-block">Take Action</button>
  </div>
<% end %>

<!-- </form> -->

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<script type="text/javascript">
  // This identifies your website in the createToken call below
  Stripe.setPublishableKey('pk_test_Mjb03gv0kQ0aLkjd5Q6rwu7B');
  // ...
</script>

<script>
jQuery(function($) {
  $('#payment-form').submit(function(event) {
    var $form = $(this);

    // Disable the submit button to prevent repeated clicks
    $form.find('button').prop('disabled', true);

    Stripe.card.createToken($form, stripeResponseHandler);

    // Prevent the form from submitting with the default action
    return false;
  });
});
</script>

<script>
$( document ).ready(function() {
  $( "#error-msg" ).hide();
});

function stripeResponseHandler(status, response) {
  var $form = $('#payment-form');

  if (response.error) {
    // Show the errors on the form
    $( "#error-msg" ).show(50);
    $form.find('.payment-errors').text(response.error.message);
    $form.find('button').prop('disabled', false);
  } else {
    // response contains id and card, which contains additional card details
    var token = response.id;
    // Insert the token into the form so it gets submitted to the server
    $form.append($('<input type="hidden" name="stripeToken" />').val(token));
    // and submit
    $form.get(0).submit();
  }
};
</script>
