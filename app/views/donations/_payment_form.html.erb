<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 ">
  <%= form_tag donations_path, id: 'payment-form', method: :post do %>
  <span class="payment-errors"></span>

  <div class="form-row form-input">
    <% if params[:amount] %>
      <input type="text" size="20" data-stripe="number", value="<%=params[:amount].to_i/100%>"/>
    <% else %>
      <input type="text" size="20" data-stripe="number", placeholder="Amount (AUD)"/>
    <% end %>
  </div>
  <div class="form-row form-input">
    <% if params[:email] %>
      <input type="text" size="20" data-stripe="number", value="<%=params[:email]%>"/>
    <% else %>
      <input type="text" size="20" data-stripe="number", placeholder="Email"/>
    <% end %>
  </div>
  <div class="form-row form-input">
    <input type="text" size="20" data-stripe="number", placeholder="Credit Card Number"/>
  </div>
  <div class="form-row">
    <input type="text" data-stripe="exp-month", placeholder="MM", class:'payment-form'/>
    <input type="text" size="" data-stripe="exp-year", placeholder="YYYY"/>
  </div>
  <div class="form-row">
    <input type="text" size="20" data-stripe="cvc", placeholder="CVC"/>
  </div>
  <div class="pay-button">
    <button type="submit" class="btn btn-black btn-block">Take Action</button>
  </div>
  <% end %>
</div>









